#!/usr/bin/env bash

set -euo pipefail

echo "ðŸ”§ Installing tmux via Homebrew..."
brew install tmux

echo "ðŸ“ Creating config folder: ~/.config/tmux"
mkdir -p ~/.config/tmux

CONFIG_PATH="$HOME/.config/tmux/tmux.conf"

echo "ðŸ“ Writing tmux config to $CONFIG_PATH"

cat > "$CONFIG_PATH" <<EOF
set -g default-terminal "tmux-256color"
set -s escape-time 0
set -g base-index 1

unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix

set-window-option -g mode-keys vi
bind -T copy-mode-vi v send-keys -X begin-selection
bind -T copy-mode-vi y send-keys -X copy-pipe-and-cancel 'pbcopy'

bind r source-file ~/.config/tmux/tmux.conf \\; display-message "tmux.conf reloaded"
EOF

echo "âœ… Tmux installed and configured for macOS!"

