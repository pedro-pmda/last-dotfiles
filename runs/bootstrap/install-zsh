#!/bin/bash

set -e

echo "ðŸº [1/8] Verificando instalaciÃ³n de Homebrew..."
if ! command -v brew &> /dev/null; then
  echo "ðŸ“¦ Instalando Homebrew..."
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
else
  echo "âœ… Homebrew ya estÃ¡ instalado."
fi

echo "ðŸ” [2/8] Verificando instalaciÃ³n de Zsh..."
if ! command -v zsh &> /dev/null; then
  echo "ðŸ“¦ Instalando Zsh..."
  brew install zsh
else
  echo "âœ… Zsh ya estÃ¡ instalado."
fi

echo "ðŸ”§ [3/8] Instalando herramientas necesarias con Homebrew..."
brew install fzf kubectx kubectx thefuck autojump
$(brew --prefix)/opt/fzf/install

echo "ðŸ“¦ [4/8] Instalando Antigen..."
curl -L git.io/antigen > ~/.antigen.zsh

echo "â˜¸ï¸ [5/8] Clonando kube-ps1..."
git clone https://github.com/jonmosco/kube-ps1.git ~/.kube-ps1 || echo "-> kube-ps1 ya existe."

echo "ðŸ“ [6/8] Generando nuevo ~/.zshrc..."

cat > ~/.zshrc <<'EOF'
eval "$(/opt/homebrew/bin/brew shellenv)"

# Powerlevel10k instant prompt
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# â”€â”€â”€ Antigen Setup â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
source $HOME/.antigen.zsh
antigen use oh-my-zsh

# â”€â”€â”€ Temas â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
antigen theme romkatv/powerlevel10k

# â”€â”€â”€ Plugins Zsh Core â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
antigen bundle git
antigen bundle docker
antigen bundle node
antigen bundle golang
antigen bundle command-not-found
antigen bundle zsh-users/zsh-autosuggestions
antigen bundle zsh-users/zsh-completions
antigen bundle zsh-users/zsh-history-substring-search
antigen bundle rupa/z
antigen bundle zsh-users/zsh-syntax-highlighting

antigen apply


# â”€â”€â”€ kube-ps1 (Kubernetes context) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if [[ -f $HOME/.kube-ps1/kube-ps1.sh ]]; then
  source $HOME/.kube-ps1/kube-ps1.sh
  PROMPT='$(kube_ps1)'$PROMPT
fi

# â”€â”€â”€ Historial Zsh â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt INC_APPEND_HISTORY SHARE_HISTORY HIST_IGNORE_ALL_DUPS HIST_FIND_NO_DUPS EXTENDED_HISTORY

# â”€â”€â”€ Alias Ãºtiles â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
alias k='kubectl'
alias kgp='kubectl get pods'
alias kaf='kubectl apply -f'
alias kn='kubens'
alias kc='kubectx'
alias gst='git status'
alias gl='git log --oneline --graph --decorate'
alias cls='clear'
alias tf='terraform'
alias repokeys="$HOME/last-dotfiles/runs/access/./repokeys"
alias run="$HOME/last-dotfiles/run"

# â”€â”€â”€ The Fuck â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
eval "$(thefuck --alias)"

# â”€â”€â”€ Powerlevel10k config â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# â”€â”€â”€ ConfiguraciÃ³n de fzf â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
[[ -f ~/.fzf.zsh ]] && source ~/.fzf.zsh

# â”€â”€â”€ Language Environment â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
export LANG=en_US.UTF-8

# â”€â”€â”€ Path Setup â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
export PATH=$HOME/bin:/usr/local/bl:wqn:$PATH

export XDG_CONFIG_HOME="$HOME/.config"
export EDITOR="nvim"

EOF

echo "ðŸ“¤ [7/8] Comprobando si Zsh es tu shell por defecto..."

if [ "$SHELL" != "$(which zsh)" ]; then
  echo "ðŸ”„ Cambiando tu shell por defecto a Zsh..."
  chsh -s $(which zsh)
else
  echo "âœ… Zsh ya es tu shell por defecto."
fi

echo "âœ… [8/8] Â¡Listo! Abre una nueva terminal o ejecuta: source ~/.zshrc"

